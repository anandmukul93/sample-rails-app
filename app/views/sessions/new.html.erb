<% provide(:title, "Log in") %>
<h1>
	Log in
</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%=form_for(:session, url: login_path) do |f| %>
			<%# render partial: 'shared/error_messages', object: login_errors || nil, as: 'errors' %>
			<%= f.label :email %>
			<%= f.email_field :email, class: "form-control" %>

			<%= f.label :password %>
			<%= f.password_field :password, class: "form-control" %>

			<%= f.label :remember_me, class: "checkbox inline" do %>
				<%= f.check_box :remember_me %>
				<span>Remember me on this computer</span>
			<% end %>

			<%= f.submit "Log In", class: "btn btn-primary short-button" %>
			<div class="alternate-area">
				New User? <span id="sign-up-span"><%= link_to "Sign up now!", signup_path %></span>
			</div>
		<%end %>
	</div>
</div>