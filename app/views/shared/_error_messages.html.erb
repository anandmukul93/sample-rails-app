<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@user.errors.count, "error") %>
    </div>
    <ul>
      <% for message in @user.errors.full_messages do %>
      <li class="error-message">
        <%= message %>
      </li>
      <% end %>
    </ul>
  </div>

<% end %>
