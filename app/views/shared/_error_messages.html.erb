<% if errors && errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(errors.count, "error") %>
    </div>
    <ul>
      <% for message in errors do %>
      <li class="error-message">
        <%= message %>
      </li>
      <% end %>
    </ul>
  </div>

<% end %>
